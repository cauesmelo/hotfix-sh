<script is:inline>
  // Preload profile images
  const profileImg = new Image();
  const profileCaueImg = new Image();
  profileImg.src = "/profile.png";
  profileCaueImg.src = "/profile-caue.png";

  function flipImage(e) {
    const img = e.currentTarget;
    img.style.transition = "transform 0.25s";
    img.style.transform = "rotateY(90deg)";

    setTimeout(() => {
      if (img.getAttribute("src") === "/profile-caue.png") {
        img.src = "/profile.png";
      } else {
        img.src = "/profile-caue.png";
      }

      img.style.transform = "rotateY(0deg)";
    }, 250);
  }
</script>

