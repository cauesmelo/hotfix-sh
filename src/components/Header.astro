---
import { SITE_TITLE } from "../consts";
---

<header>
  <h2><a href="/">{SITE_TITLE}</a></h2>

  <nav>
    <a href="/about">about me</a>
    <a href="https://www.linkedin.com/in/cauemelo/" target="_blank">linkedin</a>
    <a href="https://github.com/cauesmelo" target="_blank">github</a>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0.5rem 1em;
    background: var(--colorSurfaceDefault);
    box-shadow: var(--boxShadow);
    font-family: var(--fontBrand);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  header a {
    padding: 0.2em 0.5em;
    border-bottom: 4px solid transparent;
    text-decoration: none;
    color: var(--colorTextDefault);
    background-color: transparent;
  }

  header h2 {
    margin: 0;
    font-size: 1em;
    position: relative;
    z-index: 1;
    text-decoration: none;
    text-shadow: 1px 1px 0 var(--colorSurfaceDefault);
  }

  header h2::before {
    content: "";
    width: 100%;
    height: 45%;
    background-color: var(--colorBrand);
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: -1;
    transition: opacity 0.3s ease;
  }

  header h2 a::before,
  header h2 a::after {
    display: none;
  }

  nav a {
    font-size: 1rem;
    position: relative;
    z-index: 1;
  }

  nav a::before {
    content: "";
    width: 100%;
    height: 45%;
    background-color: var(--colorBrand);
    opacity: 0;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: -1;
    transition: opacity 0.3s ease;
  }
  nav a:hover::before {
    opacity: 1;
  }
</style>
