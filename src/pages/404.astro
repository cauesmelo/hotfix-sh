<style>
  body {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
  }

  .container {
    background: var(--colorSurfaceDefault);
    border-radius: var(--borderRadius);
    box-shadow: var(--boxShadow);
    padding: 2rem;
    max-width: min(500px, 70vw);
    text-align: center;
  }

  h1 {
    color: var(--colorBrand);
  }

  p {
    margin-bottom: 1.5rem;
  }
</style>
